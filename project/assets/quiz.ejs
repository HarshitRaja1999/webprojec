<html>
    <head>
        <title>Quiz</title>
        <link href="https://fonts.googleapis.com/css?family=Roboto+Slab&display=swap" rel="stylesheet">
        <link href="quiz.css" rel="stylesheet">
    </head>
<body>
    <div id="quizContainer" class="container">
        <div class="title">Computer quiz</div>
        <div id="question" class="question"></div>
        <label class="option"><input type="radio" name="option" value="1" /><span id="opt1">1</span></label>
        <label class="option"><input type="radio" name="option" value="2" /><span id="opt2">2</span></label>
        <label class="option"><input type="radio" name="option" value="3" /><span id="opt3">3</span></label>
        <label class="option"><input type="radio" name="option" value="4" /><span id="opt4">4</span></label>
        <button id="nextButton" class="next_btn" onclick="loadNextQuestion();">Next Question</button>
    </div>
    <div id="result" class="container_result" style="display: none;"></div>
    <script src="question.js"></script>
    <script src="quiz_script.js"></script>
</body>
</html>